<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.EquipmentController">
   <children>
      <AnchorPane prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: #180B41;">
         <children>
            <TextField fx:id="txtNomeEquipamento" layoutX="20.0" layoutY="40.0" prefWidth="360.0" promptText="Name" style="-fx-background-color: #606060; -fx-text-fill: white;" />
            <ComboBox fx:id="tipoEquipamento" layoutX="20.0" layoutY="80.0" prefWidth="360.0" promptText="Selecione o Tipo do Equipamento" style="-fx-background-color: #606060; -fx-prompt-text-fill: white;" styleClass="combo-box" />
            <TextArea fx:id="txaRelato" layoutX="20.0" layoutY="120.0" prefHeight="200.0" prefWidth="360.0" promptText="Digite o relato do defeito" style="-fx-background-color: #303030;" />
            <Button fx:id="btnCadastrar" layoutX="150.0" layoutY="511.0" mnemonicParsing="false" onAction="#setEquipment" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #303030; -fx-text-fill: white;" text="Cadastrar" />
            <ComboBox fx:id="tipoDefeito" layoutX="20.0" layoutY="340.0" prefWidth="360.0" promptText="Selecione o Tipo do Defeito" style="-fx-background-color: #606060; -fx-text-fill: white;" />
            <TextField fx:id="txtRGequipment" layoutX="20.0" layoutY="380.0" prefWidth="360.0" promptText="RG" style="-fx-background-color: #606060; -fx-text-fill: white;" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
