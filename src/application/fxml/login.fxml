<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginController">
   <children>
      <AnchorPane prefHeight="600.0" prefWidth="300.0" style="-fx-background-color: #180B41;">
         <children>
            <Label alignment="CENTER" layoutY="50.0" prefWidth="300.0" text="Login" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="40.0" />
               </font>
            </Label>
            <TextField fx:id="txtEmail" layoutX="20.0" layoutY="160.0" prefWidth="260.0" promptText="Email" style="-fx-background-color: #303030; -fx-text-fill: white;" />
            <PasswordField fx:id="txtSenha" layoutX="20.0" layoutY="215.0" prefWidth="260.0" promptText="Password" style="-fx-background-color: #303030; -fx-text-fill: white;" />
            <Button fx:id="btnLogin" layoutX="100.0" layoutY="375.0" mnemonicParsing="false" onAction="#login" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #303030; -fx-text-fill: white;" text="Login" />
            <Button fx:id="btnNew" layoutX="200.0" layoutY="466.0" mnemonicParsing="false" onAction="#createAccount" style="-fx-text-fill: white; -fx-background-color: #303030;" text="Criar Conta" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
